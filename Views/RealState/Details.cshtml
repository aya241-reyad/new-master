@model Miar.Models.RealState

@{
    ViewData["Title"] = "عرض";
}
<div class="col-lg-9 mx-auto mt-2" dir="rtl" style="text-align:right">
    <div class="card" style="background-color: #172b4d">
        <div class="card-header bg-transparent border-0">
            <h3 class=" mb-0 text-white">العرض</h3>

        </div>

        <div class="card-body" dir="rtl">
            <div class="row">
                <div class="col-md-12">
                    <form>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group col-lg-12">
                                    <label asp-for="Title" class="control-label text-white"></label>
                                    <input disabled asp-for="Title" class="form-control " />
                                </div>


                                <div class="form-group col-lg-12">
                                    <label asp-for="Discription" class="control-label text-white"></label>
                                    <input disabled asp-for="Discription" class="form-control " />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <img src="~/img/States/@Model.ImgName" style="width:100%" />

                            </div>


                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>

</div>


@section Scripts {
}
